<div class="col-md-6 col-md-offset-3"> 
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="text-center">Log in</h2>
      </div>
			
		
      <div class="panel-body"></div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: 'form-signin'}) do |f| %>
          <div class="form-inputs">
            <div class="form-group">
              <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "user@diconappy.com", input_html: {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <%= f.input :password, required: false, label: false, placeholder: "Password", input_html: {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


