= simple_form_for @pin, html: { multipart: true } do |f|
	- if @pin.errors.any?
		#errors
		%h2
		= pluralize(@pin.errors.count, "error")
		prevented this Pin from saving
		%ul
			- @pin.errors.full_messages.each do |msg|
				%li= msg
	.form-group
		= f.input :image, placeholder: 'image', input_html: { class: 'form-control'}

	.form-group
		= f.input :tittle, label:false, placeholder: 'Titre', input_html: { class: 'form-control'}

	.form-group
		= f.input :subtitle, label:false, placeholder: 'Traduction', input_html: { class: 'form-control'}

	.form-group
		= f.input :description, label:false, placeholder: 'Description', input_html: { class: 'form-control'}
	.form-group
		= f.button :submit , class: "btn btn-primary"
